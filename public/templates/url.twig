{% extends "layouts/app.twig" %}

{% block title %}Анализатор страниц{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container-lg mt-3">
        <h1>Сайт: {{ site.name }}</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-nowrap" data-test="url">
                <tbody>
                <tr>
                    <td>ID</td>
                    <td>{{ site.id }}</td>
                </tr>
                <tr>
                    <td>Имя</td>
                    <td>{{ site.name }}</td>
                </tr>
                <tr>
                    <td>Дата создания</td>
                    <td>{{ site.created_at }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <h2 class="mt-5 mb-3">Проверки</h2>
        <form method="post" action="/urls/{{ site.id }}/checks">
            <input type="submit" class="btn btn-primary" value="Запустить проверку">
        </form>
        <table class="table table-bordered table-hover" data-test="checks">
            <tbody>
            <tr>
                <th>ID</th>
                <th>Код ответа</th>
                <th>h1</th>
                <th>title</th>
                <th>description</th>
                <th>Дата создания</th>
            </tr>
            {% for check in checks %}
                <tr>
                    <td>{{ check.id }}</td>
                    <td>{{ check.status_code }}</td>
                    <td class="text-break">{{ check.h1 }}</td>
                    <td class="text-break">{{ check.title }}</td>
                    <td class="text-break">{{ check.description }}</td>
                    <td>{{ check.created_at }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if flash.errors %}
            {% for messages in flash.errors %}
                {% for value in messages %}
                    <div class="invalid-feedback">
                        {{ value }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

    </div>
{% endblock %}